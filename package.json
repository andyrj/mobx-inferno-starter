{
  "name": "inferno-mobx-starter",
  "version": "1.0.0",
  "description": "Inferno Mobx Starter Project",
  "main": "src/client.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir -p dist/ && cp index.html dist/",
    "predev": "npm run clean",
    "dev": "webpack-dev-server --content-base dist/ --inline --watch --hot --config build/webpack.client.conf",
    "build": "npm run clean && npm run build:client-prod && npm run build:prerender-prod",
    "build:dev": "npm run clean && npm run build:client-dev && npm run build:prerender-dev",
    "build:client-prod": "NODE_ENV=production webpack --optimize-minimize --config build/webpack.client.conf.js --progress --hide-modules",
    "build:prerender-prod": "NODE_ENV=production webpack --config build/webpack.prerender.conf.js --progress --hide-modules",
    "build:client-dev": "webpack --optimize-minimize --config build/webpack.client.conf.js --progress --hide-modules",
    "build:prerender-dev": "webpack --config build/webpack.prerender.conf.js --progress --hide-modules",
    "build:nodeTest": "webpack --config build/webpack.test.node.conf.js",
    "test": "npm run build:nodeTest && mocha ./test/test.node.bundle.js",
    "test:dev": "webpack-dev-server --hot --inline --content-base test/ --config build/webpack.test.conf.js",
    "test:cov": "npm run build:nodeTest && isparta cover --no-default-excludes -x '**/node_modules/**' -x '**/test/helper.js' _mocha -- --recursive",
    "test:codacy": "npm run build:nodeTest && isparta cover --no-default-excludes --report=text  -x '**/node_modules/**' -x '**/test/helper.js' _mocha --report lcovonly -- | cat ./coverage/lcov.info | ./node_modules/.bin/codacy-coverage && rm -rf ./coverage",
    "lint": "eslint --ext .js,.jsx src test/units",
    "lint:fix": "eslint --fix --ext .js,.jsx src test/units"
  },
  "author": "Andy Johnson",
  "license": "MIT",
  "dependencies": {
    "history": "^4.5.0",
    "http-hash": "^2.0.0",
    "inferno": "1.0.0-beta36",
    "inferno-component": "beta36",
    "inferno-mobx": "1.0.0-beta36",
    "lodash": "^4.17.2",
    "material-components-web": "^0.1.1",
    "mobx": "^2.7.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.4.0",
    "babel-eslint": "^4.1.8",
    "babel-loader": "^6.2.1",
    "babel-plugin-inferno": "^1.3.0-beta17",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-syntax-jsx": "^6.3.13",
    "babel-plugin-syntax-object-rest-spread": "^6.3.13",
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-inferno": "^6.6.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.8.0",
    "eslint-plugin-standard": "^2.0.1",
    "estraverse-fb": "^1.3.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "purifycss-webpack-plugin": "^2.0.3",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "testdom": "^2.0.0",
    "url": "^0.11.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0-rc.1",
    "webpack-dev-server": "beta",
    "webpack-shell-plugin": "^0.4.6"
  },
  "repository": "https://github.com/andyrj/inferno-mobx-starter"
}
