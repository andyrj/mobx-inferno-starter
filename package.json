{
  "name": "mobx-inferno-starter",
  "version": "1.0.0",
  "description": "*WIP* Mobx Inferno Starter Project",
  "main": "src/client.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir -p dist/ && cp index.html dist/",
    "predev": "npm run clean",
    "dev": "webpack-dev-server --content-base dist/ --inline --hot --config build/webpack.client.conf",
    "build": "npm run clean && npm run build:client-prod && npm run build:server-prod",
    "build:dev": "npm run clean && npm run build:client-dev && npm run build:prerender-dev",
    "build:client-prod": "NODE_ENV=production webpack --optimize-minimize --config build/webpack.client.conf.js --progress --hide-modules",
    "build:server-prod": "NODE_ENV=production webpack --optimize-minimize --config build/webpack.server.conf.js --progress --hide-modules",
    "build:client-dev": "webpack --config build/webpack.client.conf.js --progress --hide-modules",
    "build:server-dev": "webpack --config build/webpack.server.conf.js --progress --hide-modules",
    "build:nodeTest": "webpack --config build/webpack.test.node.conf.js",
    "prerender": "rm -rf site/ && mkdir -p site/ && node dist/server-bundle.js -p",
    "test": "npm run build:nodeTest && mocha ./test/test.node.bundle.js",
    "test:dev": "webpack-dev-server --hot --inline --content-base test/ --config build/webpack.test.conf.js",
    "test:cov": "npm run build:nodeTest && isparta cover --no-default-excludes -x '**/node_modules/**' -x '**/test/helper.js' _mocha -- --recursive",
    "test:codacy": "npm run build:nodeTest && isparta cover --no-default-excludes --report=text  -x '**/node_modules/**' -x '**/test/helper.js' _mocha --report lcovonly -- | cat ./coverage/lcov.info | ./node_modules/.bin/codacy-coverage && rm -rf ./coverage",
    "lint": "eslint --ext .js,.jsx src test/units",
    "lint:fix": "eslint --fix --ext .js,.jsx src test/units"
  },
  "author": "Andy Johnson",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "history": "^4.6.1",
    "http-hash": "^2.0.0",
    "inferno": "^1.4.1",
    "inferno-component": "^1.4.1",
    "inferno-create-element": "^1.4.1",
    "inferno-devtools": "^1.4.1",
    "inferno-mobx": "^1.4.1",
    "inferno-server": "^1.4.1",
    "koa": "^2.2.0",
    "koa-convert": "^1.2.0",
    "koa-mount": "^2.0.0",
    "koa-static": "^3.0.0",
    "lodash": "^4.17.4",
    "mobx": "^3.1.7",
    "optimist": "^0.6.1",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-inferno": "^2.0.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-2": "^6.22.0",
    "chai": "^3.5.0",
    "css-loader": "^0.27.3",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-import": "latest",
    "eslint-plugin-inferno": "^6.10.3",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-smells": "^1.0.1",
    "eslint-plugin-standard": "^2.1.1",
    "estraverse-fb": "^1.3.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "jsinspect": "^0.10.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "null-loader": "^0.1.1",
    "purifycss-webpack-plugin": "^2.0.3",
    "sass-loader": "^6.0.3",
    "scandir": "^0.1.2",
    "sinon": "^2.1.0",
    "style-loader": "^0.14.1",
    "testdom": "^2.0.0",
    "url": "^0.11.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dev-server": "2.4.2"
  },
  "repository": "https://github.com/andyrj/mobx-inferno-starter"
}
